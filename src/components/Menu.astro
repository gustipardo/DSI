---
  let paginaActual = 2;

  function cambiarPagina() {
    // Incrementa la página actual
    paginaActual = (paginaActual % 4) + 1;

    // Redirige a la página correspondiente
    window.location.href = `/${paginaActual}`;

    // Puedes agregar aquí cualquier otra lógica que necesites al cambiar de página
    console.log(paginaActual)
  }
  interface Props {
    url: string;
}
const {url} = Astro.props

console.log(url)
const number = parseInt(url.split("/")[1])
console.log(number)
---

<nav transition:animate="none">
  <a href=`/${(number%4)+1}`>Siguiente</a>

  <a href=`/${(number - 2 + 4) % 4 + 1}`>Anterior</a>


</nav>

