---
import Navigation from '../components/Navigation.astro'
import Card from '../components/Card.astro'
const ImageName = "map.jpg"; // Nombre de la imagen
const ImageFolder = "assets/" + ImageName; // Ruta en Firebase Storage
const URL = `https://firebasestorage.googleapis.com/v0/b/dsi-constructora.appspot.com/o/${encodeURIComponent(ImageFolder)}?alt=media`;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" />
    <title>DSI Constructora</title>
    <style>

        .bg-image {
            background-image: url('../../public/assets/grua.jpg'); 
            background-size: cover;
            background-position: center;
            height: 100vh; 
        }
    </style>
</head>
<body>
    <Navigation/>
    <section id="nosotros">
        <div class="bg-image bg-no-repeat">
            <div class="text-white text-center pt-32">
                <h1 class="text-4xl font-bold">Somos Una Empresa Constructora</h1>
                <p class="text-xl mt-4">Especializada en trabajos topográficos y la construcción de grandes estructuras como edificios, galpones, etc.</p>
            </div>
        </div>
    </section>

    <section id="servicios">
     
        <div class="bg-white text-black py-8 mx-2 border-b-4 border-black">
            <h2 class="text-3xl font-bold">Nuestros Servicios</h2>
            <p class="text-lg mt-4">Somos una Empresa Constructora especializada en trabajos topográficos y la construcción de grandes estructuras como edificios, galpones, etc.</p>
            <Card title="TRABAJOS TOPOGRÁFICOS" image="../../public/services/topo.svg" services={["Relevamientos plani-altimétricos.", "Estudio de Cuencas Hídricas.", "Cálculo y Ejecución de Mov. De Suelo.", "Acondicionamiento de Suelos para Grandes Estructuras."]} />
            <Card title="CONSTRUCCIÓN DE GRANDES ESTRUCTURAS" image="../../public/services/grua.svg" services={["Fundaciones de Hormigón Armado.", "Estructuras Metálicas y de Hormigón.", "Mampostería, cerramientos.", "Construcción en seco.", "Pintura y revestimientos.", "Instalaciones Sanitarias, Eléctricas, Redes de datos, Refrigeración, detección y Extinción de Incendios."]} />
        </div>
    </section>

    <section id="contacto">
        <h2 class="text-3xl font-bold">CONTACTO</h2>
        <div class="mt-4">
          <p class="mb-2">Martín de Gainza 801</p>
          <p class="mb-2">Edificio Panorama Offices 2</p>
          <p class="mb-2">Unidad Funcional 94, Piso 4to</p>
          <p class="mb-2">Parque Industrial Buen Ayre, Moreno</p>
        </div>
        <div class="mt-4">
          <p class="mb-2">EMAIL: info@dsiconstructora.com</p>
          <p class="mb-2">TELÉFONO: 11-53078516</p>
        </div>
      
        <div class="mt-4">
          <h3 class="text-xl font-bold">SÍGUENOS</h3>
          <div class="mt-2">
            <a href="https://www.instagram.com/dsiconstructora/" class="text-blue-500 hover:underline mr-4">Instagram</a>
            <a href="https://twitter.com/DSIconstructora" class="text-blue-500 hover:underline">Twitter</a>
          </div>
        </div>
        <img src="https://firebasestorage.googleapis.com/v0/b/dsi-constructora.appspot.com/o/assets%2Fmap.jpg?alt=media&token=38f106de-35da-40c2-8f22-22ec7105bcaa
        "/>
        <img src={URL}/>
      </section>
</body>
</html>



