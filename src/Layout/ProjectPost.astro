---
import Navigation from '../components/Navigation.astro'
import { ViewTransitions } from 'astro:transitions';

interface Props {
    title: string;
}
const { title } = Astro.props;

---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" />
    <title>{title}</title>      
    <ViewTransitions />
</head>
<body>
    <Navigation/>
    <img src="https://firebasestorage.googleapis.com/v0/b/dsi-constructora.appspot.com/o/projects%2FBarrio_Walsh.jpeg?alt=media&token=b8037e05-b5ab-4017-a12b-5c9d039679ba"
    alt="Markdown Monster icon"
    style="float: left; height: 200px" transition:name="hola"/>
    <slot/>
</body>
</html>